				batcher.getTransformMatrix(), left, scissorsLeft);
		ScissorStack.pushScissors(scissorsLeft);
		batcher.flush();
		batcher.draw(cloud1f, cloud1fScroll.getX(), cloud1fScroll.getY(), 136,
				43);
		batcher.draw(cloud1f, cloud1fScroll2.getX(), cloud1fScroll2.getY(),
				136, 43);
		batcher.flush();
		ScissorStack.popScissors();
	}

